<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/tree_strategy_background"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center"
    android:orientation="vertical" >
    <TextView
        android:id="@+id/tree_strategy_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="#00FF00"
        android:textSize="80sp" />
    
    <LinearLayout
    	android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:orientation="vertical" >
    
    	<Button
        	android:id="@+id/tree_strategy_continue"
        	android:layout_width="160dp"
        	android:layout_height="70dp"
        	android:text="@string/tree_strategy_continue"
        	android:textColor="#00FF00"
        	android:textSize="20sp" />
    
    	<Button
         	android:id="@+id/tree_strategy_new_game"
         	android:layout_width="160dp"
         	android:layout_height="70dp"
         	android:text="@string/tree_strategy_new_game"
         	android:textColor="#00FF00"
         	android:textSize="20sp" />
    		
    	<Button
    		android:id="@+id/tree_strategy_view_score"
    		android:layout_width="160dp"
    		android:layout_height="70dp"
    		android:text="@string/tree_strategy_view_score"
    		android:textColor="#00FF00"
    		android:textSize="20sp" />
    		
    	<Button
    		android:id="@+id/tree_strategy_back_to_main"
    		android:layout_width="160dp"
    		android:layout_height="70dp"
    		android:text="@string/tree_strategy_back_to_main"
    		android:textColor="#00FF00"
    		android:textSize="20sp" />
    		
    </LinearLayout>
    
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="right"
        android:orientation="horizontal" >
    	
        <TextView
            android:id="@+id/tree_strategy_author"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="#00FF00"
            android:textSize="16sp" />
        
    </LinearLayout>
    
</LinearLayout>
