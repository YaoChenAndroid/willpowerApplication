<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/tree_strategy_background"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center"
    android:orientation="vertical" >
    <ImageView
        android:id="@+id/tree_strategy_title"
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        android:layout_weight="3" />
    
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="4" >
        
    </LinearLayout>
    
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="8"
        android:orientation="horizontal" >
    
    	<LinearLayout
    		android:layout_width="0dp"
        	android:layout_height="match_parent"
        	android:layout_weight="9"
        	android:gravity="right"
        	android:orientation="vertical" >
    
    		<ImageButton
        		android:id="@+id/tree_strategy_continue"
        		android:layout_width="wrap_content"
        		android:layout_height="wrap_content"
        		android:background="@drawable/tree_strategy_continue_disable_icon" />
    
    		<ImageButton
         		android:id="@+id/tree_strategy_new_game"
         		android:layout_width="wrap_content"
         		android:layout_height="wrap_content"
         		android:background="@drawable/tree_strategy_new_game_icon" />
    		
    		<ImageButton
    			android:id="@+id/tree_strategy_view_score"
    			android:layout_width="wrap_content"
    			android:layout_height="wrap_content"
    			android:background="@drawable/tree_strategy_view_score_icon" />
    		
    		<ImageButton
    			android:id="@+id/tree_strategy_back_to_main"
    			android:layout_width="wrap_content"
    			android:layout_height="wrap_content"
    			android:background="@drawable/tree_strategy_back_icon" />
    		
    	</LinearLayout>
    
    	<LinearLayout
        	android:layout_width="0dp"
        	android:layout_height="match_parent"
        	android:layout_weight="1" >
        
    	</LinearLayout>
    
    </LinearLayout>
    
</LinearLayout>
