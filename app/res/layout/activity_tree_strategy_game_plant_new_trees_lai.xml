<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >
    
    <TableLayout
        android:id="@+id/tree_plant_new_tree_table_lai"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" >
        
        <TableRow
            android:id="@+id/tree_plant_new_tree_new_acres_lai"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="10dp" >
            
            <TextView
                android:id="@+id/tree_plant_new_tree_new_acres_label_lai"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/tree_plant_new_tree_new_acres_label_lai"
                android:textSize="25dp" />
            
            <EditText
                android:id="@+id/tree_plant_new_tree_new_acres_input_lai"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:hint="@string/tree_plant_new_tree_new_acres_hint_lai"
                android:inputType="number"
                android:text="0"
                android:textSize="25dp" />
            
        </TableRow>
        
        <TableRow
            android:id="@+id/tree_plant_new_tree_credits_lai"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" >
            
            <TextView
                android:id="@+id/tree_plant_new_tree_credits_label_lai"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/tree_plant_new_tree_credits_label_lai"
                android:textSize="25dp" />
            
            <EditText
                android:id="@+id/tree_plant_new_tree_credits_cost_lai"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="25dp" />
            
        </TableRow>
        
        <TableRow
            android:id="@+id/tree_plant_new_tree_credits_msg_lai"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" >
            
            <TextView
                android:id="@+id/tree_plant_new_tree_credits_msgresult_lai"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="25dp" />
            
        </TableRow>
        
    </TableLayout>

</LinearLayout>
